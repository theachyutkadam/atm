<h1>Transfer Transaction Only </h1>
<%= form_for :transaction, url: transfer_create_transfers_path do |f|%>
  <%= f.hidden_field :bank_id, value: @bank.id %>
  <%= f.hidden_field :atm_id, value: @atm.id %>

  Sender ATM Number : <%= f.text_field :atm_no %><br><br>
  ATM PIN : <%= f.password_field :atm_pin %><br><br>
  Receiver ATM Number : <%= f.text_field :receiver_atm_no %><br><br>
  Enter Amonunt : <%= f.text_field :balance %><br><br>
  <%= f.submit "Submit"%>
<% end -%>